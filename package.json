{
  "name": "vscode-hzero-helper",
  "displayName": "vscode-hzero-helper",
  "publisher": "mahoo12138",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.84.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onUri"
  ],
  "main": "dist/extension/index.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "hzero-helper",
          "title": "Hzero helper",
          "icon": "public/logo.svg"
        }
      ]
    },
    "commands": [
      {
        "command": "vscode-hzero-helper.helloWorld",
        "title": "Hello World",
        "icon": "$(book)"
      },
      {
        "command": "vscode-hzero-helper.create-env",
        "title": "Create a new Env"
      },
      {
        "command": "vscode-hzero-helper.scanTsxFiles",
        "title": "Scan Permission"
      },
      {
        "command": "vscode-hzero-helper.open-hzero-panel",
        "title": "Open Hzero Panel"
      }
    ],
    "views": {
      "hzero-helper": [
        {
          "type": "webview",
          "id": "hzero-helper.config-view",
          "name": "Config"
        },
        {
          "id": "permission-scanner",
          "name": "Permission Scanner"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "vscode-hzero-helper.helloWorld",
          "when": "view == hzero-helper.config-view",
          "group": "navigation"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "intl-scanner",
        "contents": "In order to use git features, you can open a folder containing a git repository or clone from a URL.\n[Open Folder](command:vscode.openFolder)\n[Clone Repository](command:git.clone)\nTo learn more about how to use git and source control in VS Code [read our docs](https://aka.ms/vscode-scm).",
        "when": "workbenchState == empty"
      },
      {
        "view": "permission-scanner",
        "contents": "In order to use git features, you can open a folder containing a git repository or clone from a URL.\n[Open Folder](command:vscode.openFolder)\n[Clone Repository](command:git.clone)\nTo learn more about how to use git and source control in VS Code [read our docs](https://aka.ms/vscode-scm).",
        "when": "workbenchState == empty"
      }
    ],
    "configuration": {
      "title": "Hzero Helper",
      "properties": {
        "hzeroHelper.env": {
          "type": "array",
          "default": [],
          "description": "Hzero Platform Env"
        },
        "hzeroHelper.currentEnv": {
          "type": "string",
          "default": "",
          "description": "Current Selected Hzero Environment"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "pnpm run package",
    "dev": "vite",
    "build": "vue-tsc --noEmit && vite build",
    "preview": "vite preview",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "pnpm run compile-tests && pnpm run compile && pnpm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@tomjs/vite-plugin-vscode": "^3.1.1",
    "@types/mocha": "^10.0.3",
    "@types/node": "18.x",
    "@types/vscode": "^1.84.0",
    "@types/vscode-webview": "^1.57.5",
    "@typescript-eslint/eslint-plugin": "^6.9.0",
    "@typescript-eslint/parser": "^6.9.0",
    "@vitejs/plugin-vue": "^5.2.1",
    "@vscode/test-electron": "^2.3.6",
    "eslint": "^8.52.0",
    "glob": "^10.3.10",
    "mocha": "^10.2.0",
    "ts-loader": "^9.5.0",
    "typescript": "^5.2.2",
    "vite": "^6.0.2",
    "vite-plugin-virtual-mpa": "^1.12.1",
    "vue-tsc": "^2.1.10"
  },
  "dependencies": {
    "@vscode/codicons": "^0.0.35",
    "@vscode/webview-ui-toolkit": "^1.4.0",
    "pixi.js": "^8.6.3",
    "vue": "^3.5.13"
  }
}